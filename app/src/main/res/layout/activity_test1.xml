<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vijaya.c.Test1"
    android:background="#F5A623">
    <ImageButton
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:background="@drawable/left2"

        android:layout_alignTop="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp"
        android:id="@+id/imageButton3" />
    <ImageButton
        android:layout_width="5dp"
        android:layout_height="22dp"
        android:background="@drawable/menu2"

        android:layout_marginEnd="30dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:id="@+id/imageButton5" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="322dp"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#fff"
        android:id="@+id/card"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take our psychology test for better experience
 "
            android:textSize="20dp"
            android:textColor="#000"
            android:gravity="center"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="138dp"
            android:layout_height="53dp"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/card"
            />

        <Button
            android:id="@+id/button3"
            android:layout_width="138dp"
            android:layout_height="53dp"
            android:text="Later"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="175dp"
            android:background="@drawable/card"/>

    </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/button4"
            android:layout_width="290dp"
            android:layout_height="48dp"
            android:layout_alignStart="@+id/card"
            android:layout_below="@+id/card"
            android:background="@drawable/btn2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="18dp"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="#000"/>
    </RelativeLayout>
</RelativeLayout>
