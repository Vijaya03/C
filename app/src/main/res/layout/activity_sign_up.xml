<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vijaya.c.Sign_up"
    android:background="#F5A623">
    <TextView
        android:layout_width="80dp"
        android:layout_height="29dp"
        android:text="Sign Up"
        android:textColor="#fff"
        android:textSize="22dp"
android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:id="@+id/textView6" />
    <ImageButton
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:background="@drawable/left2"

        android:layout_alignTop="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp"
        android:id="@+id/imageButton3" />
    <ImageButton
        android:layout_width="5dp"
        android:layout_height="22dp"
        android:background="@drawable/menu2"

        android:layout_marginEnd="30dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:id="@+id/imageButton5" />
    <EditText
        android:layout_width="380dp"
        android:layout_height="53dp"
        android:hint="User Name"
        android:textSize="13dp"

        android:paddingLeft="20dp"
        android:textColorHint="#515050"
        android:background="@drawable/edit_round"
        android:id="@+id/editText"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="21dp" />
    <EditText
        android:layout_width="380dp"
        android:layout_height="53dp"
        android:hint="Email"
        android:textSize="13dp"
        android:paddingLeft="20dp"
        android:textColorHint="#515050"
        android:background="@drawable/edit_round"
        android:id="@+id/editText2"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/editText3" />
    <EditText
        android:layout_width="380dp"
        android:layout_height="53dp"
        android:hint="Gender"
        android:textSize="13dp"
        android:paddingLeft="20dp"
        android:textColorHint="#515050"
        android:background="@drawable/edit_round"
        android:id="@+id/editText3"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="1dp"
        android:layout_height="53dp"
        android:src="@drawable/line1"
        android:layout_marginLeft="264.5dp"
        android:layout_alignTop="@id/editText3"/>
    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
      android:src="@drawable/arrow12"
        android:layout_marginLeft="278dp"
        android:layout_marginTop="18dp"
        android:layout_alignTop="@id/editText3"/>
    <EditText
        android:layout_width="380dp"
        android:layout_height="53dp"
        android:hint="Location"
        android:textSize="13dp"
        android:paddingLeft="20dp"
        android:textColorHint="#515050"
        android:background="@drawable/edit_round"
        android:id="@+id/editText4"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/editText2" />
    <EditText
        android:layout_width="380dp"
        android:layout_height="53dp"
        android:hint="Choose your interest (Max five)"
        android:textSize="13dp"
        android:paddingLeft="20dp"
        android:textColorHint="#515050"
        android:background="@drawable/edit_round"
        android:id="@+id/editText5"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/editText4"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="1dp"
        android:layout_height="53dp"
        android:src="@drawable/line1"
        android:layout_marginLeft="264.5dp"
        android:layout_alignTop="@id/editText5"/>
    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/arrow12"
        android:layout_marginLeft="278dp"
        android:layout_marginTop="18dp"
        android:layout_alignTop="@id/editText5"/>
    <EditText
        android:layout_width="380dp"
        android:layout_height="53dp"
        android:hint="Mobile No."
        android:textSize="13dp"
        android:paddingLeft="20dp"
        android:textColorHint="#515050"
        android:background="@drawable/edit_round"
        android:id="@+id/editText6"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/editText5" />
    <EditText
        android:layout_width="380dp"
        android:layout_height="53dp"
        android:hint="Set password"
        android:textSize="13dp"
        android:paddingLeft="20dp"
        android:textColorHint="#515050"
        android:background="@drawable/edit_round"
        android:id="@+id/editText7"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/editText6" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password should have atleast one special characters"

        android:layout_below="@+id/editText7"

        android:layout_alignStart="@+id/imageButton3" />
    <EditText
        android:layout_width="380dp"
        android:layout_height="53dp"
        android:hint="NEXT"
        android:textAlignment="center"
        android:textSize="13dp"
        android:textStyle="bold"
        android:textColorHint="#515050"
        android:background="@drawable/edit_round"
        android:id="@+id/editText8"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/editText7" />




</RelativeLayout>
