<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vijaya.c.Login_Page"
    android:background="#fff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:src="@drawable/_group1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect.collaborate.converse"
        android:textColor="#000"
        android:id="@id/title"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />
    <EditText
        android:layout_width="290dp"
        android:layout_height="53dp"
        android:hint="Email/User Name"
android:textSize="15dp"
        android:paddingLeft="20dp"
        android:textColorHint="#F5A623"
        android:background="@drawable/edit_round"
        android:id="@+id/editText"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="290dp"
        android:layout_height="53dp"
        android:hint="Password"
        android:textSize="15dp"
        android:paddingLeft="20dp"
        android:textColorHint="#F5A623"
        android:background="@drawable/edit_round"
        android:id="@+id/editText1"
        android:inputType="textPassword"
        android:layout_marginRight="50dp"
        android:layout_marginTop="57dp"
        android:layout_alignTop="@+id/editText"
        android:layout_alignStart="@+id/editText" />
    <Button
        android:layout_width="262dp"
        android:layout_height="53dp"
        android:background="@drawable/btn"
        android:text="Sign In"
        android:textColor="#000"
    android:fontFamily="sans-serif"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:layout_below="@+id/editText1"
        android:layout_alignEnd="@+id/editText1"
        android:layout_marginTop="39dp"
        android:id="@+id/button" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot your Password?"
        android:textColor="#383838"
        tools:mockup_opacity="2"
        android:textSize="12dp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/textView2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account?"
        android:textColor="#383838"
        android:textSize="14dp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:id="@+id/texview3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="Sign Up"
        android:textColor="#F5A623"
        android:textSize="14dp"
        android:layout_below="@+id/texview3"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_marginEnd="20dp"
        android:id="@+id/textview4"
        android:layout_toEndOf="@+id/imageView4" />
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/bitmap3"
        android:id="@+id/imageView3"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignEnd="@+id/texview3" />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/bitmap1"
        android:id="@+id/imageView4"
        android:layout_below="@+id/textview4"
        android:layout_alignStart="@+id/texview3"
        android:layout_marginTop="27dp" />
</RelativeLayout>
